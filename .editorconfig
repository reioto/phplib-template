root = true

[*]
charset = utf-8
end_of_line = lf

[*.php]
indent_style = space
indent_size = 4
insert_final_newline = false

[composer.json]
indent_style = space
indent_size = 4

[{*.xml, *.xml.dist}]
indent_style = tab
indent_size = 4

[{*.yml, *.yaml, *.neon*}]
indent_style = space
indent_size = 2